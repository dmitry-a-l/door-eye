#!/usr/bin/env bash

set -Eeuo pipefail

/usr/bin/mpv --no-config \
             --profile=low-latency  \
             --untimed \
             --no-cache \
             --no-correct-pts \
             --stream-buffer-size=4KiB \
             --video-rotate="${VIDEO_ROTATION_ANGLE}" \
             --video-zoom="${VIDEO_ZOOM_FACTOR}" \
             --osd-duration=10000 \
             --osd-align-x=center \
             --osd-margin-y=50 \
             --input-ipc-server="${SOCK_PATH}" \
             ${STREAM_URL} "${@}"
